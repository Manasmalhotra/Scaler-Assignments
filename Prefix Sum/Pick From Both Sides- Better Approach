//Better Approach.
Take the sum of first B-1 elements then slide that window in reverse while including elements at the end.

int Solution::solve(vector<int> &A, int B) {
    int i=0,n=A.size(),curr=0,ans=INT_MIN;
    for(i=0;i<B;i++){
        curr=curr+A[i];
    }
    ans=max(ans,curr);
    int back=B-1,j;
    for(j=n-1;j>=n-B;j--){
        curr+=A[j];
        curr-=A[back];
        back--;
        ans=max(ans,curr);
    }
    return ans;
}
